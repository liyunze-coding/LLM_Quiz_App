<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InterestsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="30dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Your Interests"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You may select upto 10 topics" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacingVertical="0dp"
            android:layout_marginTop="30dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAlgorithms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Algorithms" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDataStructures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Data Structures" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipUIUX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="UI/UX" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipWebDevelopment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Web Development" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMobileDevelopment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Mobile Development" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMachineLearning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Machine Learning" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCybersecurity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Cybersecurity" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCloudComputing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Cloud Computing" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDatabaseSystems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Database Systems" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipOperatingSystems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Operating Systems" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSoftwareEngineering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Software Engineering" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipArtificialIntelligence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Artificial Intelligence" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipComputerNetworks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Computer Networks" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipInternetOfThings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Internet of Things" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipProgrammingLanguages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Programming Languages" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipGameDevelopment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Game Development" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDevOps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="DevOps" />
        </com.google.android.material.chip.ChipGroup>

        <Button
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Back to Home" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>